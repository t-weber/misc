func test_loop()
{
	int i;
	i = 0;

	loop i<16 do
		i = i+1;

	putint(i);
}


func test_args(int i, scalar j, scalar k)
{
	putint(i);
	putflt(j);
	putflt(k);
}


func test_vec(vec 3 a)
{
	vec 3 v, w, x, b;
	v = [1., 2., 3.];
	v = w;
	b = a;

	x = v + w;
}


func test_str(str s)
{
	putstr(s);

	str i, j, k, l;

	i = "Test 123";
	j = i;
	j = j + ", 987";
	k = ", ";
	l = i + k + j;

	putstr(i);
	putstr(j);
	putstr(k);

	putstr(i + k + j);
	putstr(l);

	putint(strlen(j));
}


func start()
{
